<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/bananas" />

        <TextView
            android:id="@+id/product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_image"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@id/product_image"
            android:text="Product ID: 1213"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_image"
            android:layout_marginStart="16dp"
            android:layout_below="@id/product_id"
            android:layout_marginTop="4dp"
            android:text="Order ID: 1415"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/product_image"
            android:layout_marginStart="16dp"
            android:layout_below="@id/order_id"
            android:layout_marginTop="8dp"
            android:text="Customer: \nShipping Address: \nQuantity: \nTotal Price: "
            android:textSize="14sp"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/product_id"
            android:text="24-3-2024"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="end" />

        <ImageButton
            android:id="@+id/delete_order_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_remove"
            android:background="@android:color/transparent" />
        <!--ready-->

    </RelativeLayout>
</androidx.cardview.widget.CardView>




