<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="390dp"
            android:layout_height="844dp"
            android:layout_gravity="center"
            android:background="@drawable/login_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="70dp"
                    android:text="Get Started!"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_background_rounded"
                    android:padding="12dp"
                    android:text="Enter your username here..."
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_background_rounded"
                    android:padding="12dp"
                    android:text="Enter your email here..."
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_background_rounded"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:text="Enter your password here..."
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/profileEditText"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_background_rounded"
                    android:padding="12dp"
                    android:text="Choose a profile..."
                    android:textColor="@color/white" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signUpButton"
                    style="@style/LoginBtn"
                    android:layout_width="270dp"
                    android:layout_height="55dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_background_rounded"
                    android:padding="12dp"
                    android:text="Sign up"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:text="or Sign-up with"
                    android:textColor="@color/black" />


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
