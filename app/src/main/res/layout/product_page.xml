<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0D0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/bottom_navigation">
    <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F0F0D0">

                <!-- Top Bar with Logo and Profile Icon -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/filter_icon"
                        android:layout_width="52dp"
                        android:layout_height="36dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/filter" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/logoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/titan_one"
                        android:text="AgroNet"
                        android:textSize="24sp"
                         />

                    <ImageView
                        android:id="@+id/profile_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_profile" />
                </RelativeLayout>

                <!-- Search Bar -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/searchbar"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/search_icon"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:hint="Search..."
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:paddingEnd="40dp"
                        android:singleLine="true" />

                    <ImageView
                        android:id="@+id/search_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_icon" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Top Selling Products Section -->
            <LinearLayout
                android:id="@+id/top_selling_section"
                android:layout_below="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top selling products ðŸ”¥"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                 <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Include item_product.xml here -->
                    <include layout="@layout/item_product"/>
                    <include layout="@layout/item_product"/>
                    <include layout="@layout/item_product"/>

                    <!-- Add more items similarly -->

                </LinearLayout>

                        <!-- Add more items similarly -->
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Imperfect Products Section -->
            <LinearLayout
                android:id="@+id/imperfect_products_section"
                android:layout_below="@id/top_selling_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imperfect Products ðŸ·ï¸"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Imperfect Product Items -->
                        <!-- Repeat for each item -->
                        <!-- Include item_product.xml here -->
                        <include layout="@layout/item_product"/>
                        <include layout="@layout/item_product"/>
                        <include layout="@layout/item_product"/>

                        <!-- Add more items similarly -->

                        <!-- Add more items similarly -->

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Fast Shipped Section -->
            <LinearLayout
                android:id="@+id/fast_shipped_section"
                android:layout_below="@id/imperfect_products_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast shipped ðŸšš"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="2"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Imperfect Product Items -->
                        <!-- Repeat for each item -->
                        <!-- Include item_product.xml here -->
                        <include layout="@layout/item_product"/>
                        <include layout="@layout/item_product"/>
                        <include layout="@layout/item_product"/>

                        <!-- Add more items similarly -->

                        <!-- Add more items similarly -->
                        </LinearLayout>

                        <!-- Add more items similarly -->


                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:padding="8dp"
        android:gravity="center">

        <!-- Bottom Navigation Items -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/nav_corn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:src="@drawable/nav_cart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/farmericon_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farmers"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
